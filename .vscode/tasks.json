{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format and lint",
      "type": "shell",
      "command": "source .env/bin/activate && scripts/format-python.sh .",
      "windows": {
        "command": ".env\\bin\\activate.bat; scripts\\format-python.sh ."
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "source .env/bin/activate && python3 -m pytest . --doctest-modules",
      "windows": {
        "command": ".env\\bin\\activate.bat; python3 -m pytest . --doctest-modules"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
